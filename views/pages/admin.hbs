<title>GoMarket::Administracion</title>

<div class="container">

    <div class="text-center m-5">
        <hr>
        <h1>
            Administracion
        </h1>
        <hr>
    </div>

    <div class="row">
        <form action="./admin" method="post">
            <div class="mb-3 row text-center">
                <label for="email" class="col-sm-2 col-form-label">Email:</label>
                <div class="col-sm-8">
                    <input type="email" class="form-control w-100" placeholder="Email" name="email" id="email">
                </div>
            </div>
            <div class="mb-3 row text-center">
                <label for="contrasenia" class="col-sm-2 col-form-label">Contraseña:</label>
                <div class="col-sm-8">
                    <input type="password" class="form-control w-100" placeholder="Contraseña" name="contrasenia" id="contrasenia">
                </div>
            </div>
            <div class="mb-3 text-center">
                <input type="submit" class="btn btn-primary w-50 p-2" value="Iniciar Sesion">
            </div>

            <div class="text-center">
                <h2 class="text-danger">
                    {{validacion}}
                </h2>
            </div>
        </form>
    </div>

</div>